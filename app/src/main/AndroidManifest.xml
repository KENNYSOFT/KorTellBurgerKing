<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="kr.KENNYSOFT.KorTellBurgerKing">

	<uses-permission android:name="android.permission.INTERNET"/>

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/AppTheme"
		android:configChanges="keyboardHidden|orientation|screenSize">
		<activity
			android:name="kr.KENNYSOFT.KorTellBurgerKing.MainActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name="kr.KENNYSOFT.KorTellBurgerKing.HistoryActivity"
			android:label="@string/history_name"
			android:configChanges="keyboardHidden|orientation|screenSize"
			android:parentActivityName="kr.KENNYSOFT.KorTellBurgerKing.MainActivity">
		</activity>
		<activity
			android:name="kr.KENNYSOFT.KorTellBurgerKing.SettingsActivity"
			android:label="@string/settings_name"
			android:configChanges="keyboardHidden|orientation|screenSize"
			android:parentActivityName="kr.KENNYSOFT.KorTellBurgerKing.MainActivity">
			<meta-data
				android:name="android.preference"
				android:resource="@xml/settings"/>
		</activity>
	</application>

</manifest>